@page "/login"
@model Company_Site.Areas.Identity.Pages.LoginModel

<div class="container position-relative full-screen">

	<div class="text-center login-shadow p-4">

		<div>

			<h3 class="mb-3">Login</h3>

			<form method="post">

				<div class="d-flex justify-content-center">
					@Html.ValidationSummary("", new { @class="text-danger" })
				</div>

				<div>
					<input type="text" asp-for="@Model.returnUrl" class="d-none"/>
				</div>

				<div class="form-floating mb-3">
				  <input type="email" class="form-control" id="email" placeholder="email" asp-for="@Model.Input.Email"/>
				  <label for="email">Email</label>
				</div>

				<div class="form-floating mb-3">
				  <input type="password" class="form-control" id="password" placeholder="Password" asp-for="@Model.Input.Password"/>
				  <label for="password">Password</label>
				</div>

				<div class="d-flex justify-content-center mt-2">
					<input class="btn btn-outline-primary" value="Login" type="submit"/>
				</div>

			</form>

		</div>

	</div>

</div>

