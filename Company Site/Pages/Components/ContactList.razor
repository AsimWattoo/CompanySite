@typeparam T

<div class="border contacts h-100 w-100 overflow-hidden">

    <div class="modal" id="deleteConfirmModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete the record?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" @onclick="@(() => OnDelete(_id))"  data-bs-dismiss="modal"  class="btn btn-danger">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <div class="header-item">
        <h5 class="text-center mt-2">@Title</h5>
        <!--Search Box-->
        <div>
            <div class="py-0 mx-3 d-flex justify-content-center">
                <div class="d-flex align-items-center">
                    <label for="searchBox" class="me-1">Search</label>
                    <input type="text" class="roundedTextBox me-1"/>
                    <a class="btn btn-outline-primary px-2 py-1 mx-1 mx-md-0 my-1 btn-search"><i class="fa fa-search"></i></a>
                </div>
            </div>
        </div>
    </div>

    <!--Items-->
    <div class="px-1 py-2 scrollable">
        <div class="items-list">
            @foreach (T e in Enteries)
            {
                <div class="row contact d-flex align-items-center justify-content-between" @onclick="@(() => OnClick(GetContactId(e)))">
                    <div class="col-9">
                        <p class="item-text mb-0">@GetContactName(e)</p>
                    </div>
                    @if (ShowDeleteButton)
                    {
                        <div class="d-flex justify-content-center col-3">
                            <a @onclick='@(() => OnDeleteRecord(GetContactId(e)))' data-bs-toggle="modal" class="my-1" data-bs-target="#deleteConfirmModal"><i class="fa fa-trash btn btn-outline-danger"></i></a>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

</div>