@typeparam T

<div class="card border contacts h-100 w-100 overflow-hidden">

    <Modal Title="Delete Confirmation" ShowModal=_isDeleteConfirmationShown>
        <div class="modal-body">
            <p>Are you sure you want to delete the record?</p>
        </div>
        <div class="modal-footer">
            <a type="button" class="btn btn-secondary" @onclick=CancelDelete>Close</a>
            <button type="button" @onclick="Delete" class="btn btn-danger">Confirm</button>
        </div>
    </Modal>

    <div class="header-item">
        <h5 class="text-center mt-2">@Title</h5>
        <!--Search Box-->
        <div>
            <div class="py-0 mx-3 d-flex justify-content-center">
                <div class="d-flex align-items-center">
                    <label for="searchBox" class="me-1">Search</label>
                    <input type="text" class="roundedTextBox me-1"/>
                    <a class="btn btn-outline-primary px-2 py-1 mx-1 mx-md-0 my-1 btn-search"><i class="fa fa-search"></i></a>
                </div>
            </div>
        </div>
    </div>

    <!--Items-->
    <div class="px-1 scrollable">
        <div class="items-list">
            @foreach (T e in Enteries)
            {
                <div class="row contact d-flex align-items-center justify-content-between">
                    @if (ShowDeleteButton)
                    {
                        <div class="col-7">
                            <p class="item-text mb-0">@GetContactName(e)</p>
                        </div>
                        <div class="d-flex justify-content-center align-items-center col-5 my-1">
                            <a @onclick="@(() => OnClick(GetContactId(e)))" class="mx-1"><i class="fa fa-edit btn btn-outline-primary"></i></a>
                            <a @onclick='@(() => OnDeleteRecord(GetContactId(e)))' class="mx -1"><i class="fa fa-trash btn btn-outline-danger"></i></a>
                        </div>
                    }
                    else
                    {
                        <div class="col-12" @onclick="@(() => OnClick(GetContactId(e)))">
                            <p class="item-text mb-0">@GetContactName(e)</p>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

</div>