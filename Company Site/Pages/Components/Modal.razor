<div class="modal @(ShowModal ? "show d-block" : "d-none")" role="dialog" id="@Guid.NewGuid().ToString()">
    <div class="modal-dialog modal-dialog-centered @(CustomWidth ? "mw-100" : "")" style="width: @(CustomWidth ? $"{Width}%" : "auto");">
        <div class="modal-content px-4 py-4">
            @if (!string.IsNullOrEmpty(Title))
            {
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                </div>
            }
            <div class="modal-body">
                @ChildContent
            </div>
        </div>
    </div>
</div>

@if (ShowModal)
{
    <div class="modal-backdrop show"></div>
}