@page "/finance/expense/modify"

<h2 class="text-center">Expense Manager</h2>
<EditForm Model="NewEntry" class="mt-3">
    <div class="row my-2">
        <div class="col-md-6">
            <label for="trustSelect">Select Trust</label>
            <select id="trustSelect" class="form-select">
                <option value="1">1</option>
            </select>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-3">
            <label for="trustCode">Trust Code</label>
            <InputText id="trustCode" class="form-control" type="text" @bind-Value="NewEntry.TrustCode"/>
        </div>
    </div>
    <div class="row  my-2">
        <div class="col-md-6">
            <label for="borrowerSelect">Select Borrower</label>
            <select id="borrowerSelect" class="form-select">
                <option value="1">1</option>
            </select>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-3">
            <label for="borrowerCode">Borrower Code</label>
            <InputText id="borrowerCode" class="form-control" type="text"  @bind-Value="NewEntry.Borrower_Code"/>
        </div>
    </div>
    <div class="row  my-2">
        <div class="col-md-6">
            <label for="vendor">Vendor</label>
            <select id="vendor" class="form-select">
                <option value="1">1</option>
            </select>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-3">
            <label for="service">Service</label>
            <InputText id="service" class="form-control" type="text"  @bind-Value="NewEntry.Service"/>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-md-3">
            <label for="billDate">Bill Date</label>
            <input id="billDate" type="date" class="form-control"  @bind-value="NewEntry.PaymentDate"/>
        </div>
        <div class="col-md-3">
            <label for="billNumber">Bill Amount</label>
            <InputNumber TValue="double" id="billNumber" type="number" class="form-control"  @bind-Value="NewEntry.BillAmount"/>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-3">
            <label for="paymentMethod">Payment Method</label>
            <InputText id="paymentMethod" class="form-control" type="text" @bind-Value="NewEntry.PaymentMode"/>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-md-3">
            <label for="paymentAmount">Payment Amount</label>
            <InputNumber TValue="double" id="paymentAmount" type="number" class="form-control" @bind-Value="NewEntry.PaymentAmount"/>
        </div>
        <div class="col-md-3">
            <label for="accountSelect">Select Account</label>
            <select id="accountSelect" class="form-select">
                <option value="1">1</option>
            </select>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-3 pt-4">
            <InputCheckbox id="proportionality" class="form-check-input" @bind-Value="NewEntry.Proportionately"/>
            <label for="proportionality">Proportionality</label>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-4">
        <button @onclick="GoBack" class="btn btn-danger me-3">Cancel</button>
        <button @onclick="Clear" class="btn btn-primary me-3">Clear</button>
        <button class="btn btn-primary">@(IsAddMode ? "Add" : "Edit")</button>
    </div>
</EditForm>

