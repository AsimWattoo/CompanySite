@using Company_Site.Data;
@using Company_Site.Pages.Components
<div class="card">
    <div class="card-header pb-0">
        <h5>Distribution</h5>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form class="form form-theme">
                        <label for="turstCode">Trust Code</label>
                        <label class="form-control mb-2">@Model.TrustCode</label>
                        <label for="turstName">Trust Name</label>
                        <label class="form-control mb-2">@Model.TrustName</label>
                        <label for="turstSetupDate">Trust Setup Date</label>
                        <input id="turstSetupDate" class="form-control mb-2" type="date">
                        <label for="turstAge">Trust Age</label>
                        <input id="turstAge" class="form-control mb-2" type="number">
                        <br>
                        <label for="particulars">Particulars</label>
                        <input id="particulars" class="form-control mb-2" type="number">
                        <label for="openingBalance">Opening Balance</label>
                        <input id="openingBalance" class="form-control mb-2" type="number">
                        <label for="totalPayment">Total Collection</label>
                        <input id="totalPayment" class="form-control mb-2" type="number">
                        <label for="totalRepayment">Total Interest Repayment</label>
                        <input id="totalRepayment" class="form-control mb-2" type="number">
                        <label for="totalBalance">Total Balance</label>
                        <input id="totalBalance" class="form-control mb-2" type="number">
                        <br>
                        <label for="expenses">Expenses</label>
                        <input id="expenses" class="form-control mb-2" type="number">
                        <label for="trusteeshipFees">Trusteeship Fees</label>
                        <input id="trusteeshipFees" class="form-control mb-2" type="number">
                        <label for="resFees">Resolution Fees</label>
                        <input id="resFees" class="form-control mb-2" type="number">
                        <label for="collectionFees">Collection Fees</label>
                        <input id="collectionFees" class="form-control mb-2" type="number">
                        <label for="totalOtherExpenses">Total Other Expenses</label>
                        <input id="totalOtherExpenses" class="form-control mb-2" type="number">
                        <label for="otherAdjustments">Other Adjustments</label>
                        <input id="otherAdjustments" class="form-control mb-2" type="number">
                        <label for="totalExpenses">Total Expenses</label>
                        <input id="totalExpenses" class="form-control mb-2" type="number">
                        <label for="balance">Balance</label>
                        <input id="balance" class="form-control mb-2" type="number">
                        <label for="gst">GST:30%</label>
                        <input id="gst" class="form-control mb-2" type="number">
                        <label for="lessAdvanceTDS">Less: Advance TDS 10%</label>
                        <input id="lessAdvanceTDS" class="form-control mb-2" type="number">
                        <label for="amountAvailable">Amount Available</label>
                        <input id="amountAvailable" class="form-control mb-2" type="number">
                        <label for="normalDistribution">Normal Distribution</label>
                        <input id="normalDistribution" class="form-control mb-2" type="number">
                        <label for="surplusDistribution">Surplus Distribution</label>
                        <input id="surplusDistribution" class="form-control mb-2" type="number">
                        <label for="newSRvalue">New SR value</label>
                        <input id="newSRvalue" class="form-control mb-2" type="number">
                        <label for="lessProvision">Less: Provision</label>
                        <input id="lessProvision" class="form-control mb-2" type="number">
                        <label for="closingBalance">Closing Balance</label>
                        <input id="closingBalance" class="form-control mb-2" type="number">

                        <label for="trustDesc">Trust description</label>
                        <textarea id="trustDesc" class="form-control mb-2"></textarea>
                        <label for="t&c">Terms & Condition</label>
                        <textarea id="t&c" class="form-control mb-2"></textarea>

                        <div class="d-flex">
                            <button class="btn btn-primary clear">Clear All</button>
                            <button class="btn btn-primary">Process</button>
                        </div>
                    </form>
                </div>
                <div class="col-md-8">
                    <h5>SR Details</h5>
                    <table class="table">
                        <thead>
                            <th>SR Holder</th>
                            <th>Normal</th>
                            <th>SR Share</th>
                            <th>Surplus</th>
                            <th>SR Share</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@Model.Trust.SRIssuer</td>
                                <td>@Model.Trust.IssuerShare%</td>
                                <td>@((Model.Trust.SRIssued * Model.Trust.IssuerShare) / 100)</td>
                                <td>@Model.Trust.IssuerUpsideShare%</td>
                                <td>@((Model.Trust.SRIssued * Model.Trust.IssuerUpsideShare) / 100)</td>
                            </tr>
                            <tr>
                                <td>@Model.Trust.SRHolder</td>
                                <td>@Model.Trust.HolderShare%</td>
                                <td>@((Model.Trust.SRIssued * Model.Trust.HolderShare) / 100)</td>
                                <td>@Model.Trust.HolderUpsideShare%</td>
                                <td>@((Model.Trust.SRIssued * Model.Trust.HolderUpsideShare) / 100)</td>
                            </tr>
                            <tr>
                                <td>Total</td>
                                <td>@(Model.Trust.IssuerShare + Model.Trust.HolderShare)%</td>
                                <td>@Model.Trust.SRIssued</td>
                                <td>@(Model.Trust.IssuerUpsideShare + Model.Trust.HolderUpsideShare)%</td>
                                <td>@Model.Trust.SRIssued</td>
                            </tr>
                        </tbody>
                    </table>
                    <br>
                    <table class="table text-center">
                        <thead>
                            <th>Distribution</th>
                            <th colspan="2">Normal Gross Distribution</th>
                            <th colspan="2">Surplus Gross Distribution</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>SR Holder</td>
                                <td>SR Value</td>
                                <td>Amount in Rs.</td>
                                <td>SR value</td>
                                <td>Amount in Rs.</td>
                            </tr>
                            <tr>
                                <td>Issuer</td>
                                <td>0.00</td>
                                <td>0.00</td>
                                <td>0.00</td>
                                <td>-</td>
                            </tr>
                            <tr>
                                <td>Holder</td>
                                <td>0.00</td>
                                <td>0.00</td>
                                <td>0.00</td>
                                <td>-</td>
                            </tr>
                            <tr>
                                <td>Total</td>
                                <td>0.00</td>
                                <td>0.00</td>
                                <td>0.00</td>
                                <td>-</td>
                            </tr>
                        </tbody>
                    </table>
                    <br>
                    <table class="table text-center">
                        <thead>
                            <th></th>
                            <th colspan="2">Opening</th>
                            <th colspan="2">Closing</th>
                        </thead>
                        <tbody>
                            <tr>
                                <td>SR Holder</td>
                                <td>FV SR Value</td>
                                <td>Distribution Value</td>
                                <td>FV SR value</td>
                                <td>Distribution Value</td>
                            </tr>
                            <tr>
                                <td>Issuer</td>
                                <td>0.0</td>
                                <td>0.0</td>
                                <td>0.0</td>
                                <td>0.0</td>
                            </tr>
                            <tr>
                                <td>Holder</td>
                                <td>0.0</td>
                                <td>0.0</td>
                                <td>0.0</td>
                                <td>0.0</td>
                            </tr>
                            <tr>
                                <td>Total</td>
                                <td>0.0</td>
                                <td>0.0</td>
                                <td>0.0</td>
                                <td>0.0</td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="my-2">
                        <h5 class="my-2">Expenses</h5>
                        <CollapsibleContainer Id="1">
                            <Table T="ExpenseEntry" T2="int" Headers="ExpenseHeaders" Items=ExpenseEntries GetId=GetExpenseId IsSearchable="false" IsEditable="@(p => false)" IsDeleteable="@(p => false)"/>
                        </CollapsibleContainer>
                    </div>

                    <div class="my-2">
                        <h5 class="my-2">Collections</h5>
                        <CollapsibleContainer Id="2">
                            <Table T="CollectionEntry" T2="int" OnRowClick="CollectionRowSelected" ShowSerialNumber=true Items="Collections" GetId="GetCollectionId" Headers="CollectionHeaders" IsSearchable="false" IsEditable="@(p => false)" IsDeleteable="@(p => false)"/>
                        </CollapsibleContainer>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>