@page "/finance/collection/modify"

<h2 class="text-center">Expense Manager</h2>
<EditForm Model="NewEntry" class="mt-3">
    <div class="row">
        <div class="col-md-6">
            <label for="borrowerSelect">Select Borrower</label>
            <select id="borrowerSelect" class="form-select">
                <option value="1">1</option>
            </select>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-3">
            <label for="borrower">Borrower</label>
            <InputText id="borrower" class="form-control" @bind-Value="NewEntry.Borrower"/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label for="creditDate">Credit Date</label>
            <input id="creditDate" type="date" class="form-control" @bind-value="NewEntry.CreditDate">
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-3">
            <label for="creditAmount">Credit Amount</label>
            <InputNumber id="creditAmount" class="form-control" type="number" @bind-Value="NewEntry.CreditAmount"/>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-3">
            <label for="kyc">KYC</label>
            <InputSelect @bind-Value="NewEntry.KYC" id="kyc" class="form-select">
                <option value="pending">Pending</option>
                <option value="complete">Complete</option>
                <option value="na">NA</option>
            </InputSelect>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="noneSeller">None Seller</label>
            <InputText id="noneSeller" class="form-control" type="text" @bind-Value="NewEntry.NoneSeller"/>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-3">
            <label for="noneSellerShare">None Seller Share</label>
            <InputText id="noneSellerShare" class="form-control" type="number" @bind-Value="NewEntry.NoneSellerShare"/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <label for="adjustTowards">Adjust Towards</label>
            <InputSelect @bind-Value="NewEntry.AdjustToward" id="adjustTowards" class="form-select">
                <option value="interest">Interest</option>
                <option value="penalInterest">Penal Interest</option>
                <option value="principal">Principal</option>
                <option value="expense">Expense</option>
            </InputSelect>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-3 pt-4">
            <InputCheckbox id="Proportionately" type="checkbox" class="form-check-input" @bind-Value="NewEntry.Proportionately"/>
            <label for="Proportionately">Proportionately</label>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-4">
        <button @onclick="GoBack" class="btn btn-danger me-3">Cancel</button>
        <button @onclick="Clear" class="btn btn-primary me-3">Clear</button>
        <button class="btn btn-primary">@(IsAddMode ? "Add" : "Edit")</button>
    </div>
</EditForm>

