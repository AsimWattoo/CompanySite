@page "/statement_of_account"
@using Company_Site.Pages.Components
@using Company_Site.ViewModels;

<div class="container-md mb-3">
    <h3 class="text-center">Statement Of Account</h3>

    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <h5>Account Name: </h5>
        </div>
    </div>

    <div class="row mt-1">
        <div class="col-6">
            <p class="text-center">Borrower Code: </p>
        </div>
        <div class="col-6">
            <p class="text-center">Trust Code: </p>
        </div>
    </div>

    <!--Table-->
    <div class="d-flex justify-content-center">
        <div class="table mt-1">
            <Table T="StatementOfAccountViewModel" T2="int" Headers="Headers" GetId="GetId" IsSearchable=false IsDeleteable="@(t => false)" IsEditable="@(t => false)" Items="Statements"/>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12 d-flex justify-content-center">
            Account: All Accounts
        </div>
    </div>

    <div class="row mt-1">
        <div class="col-3">
            <p class="text-center">Collection: </p>
        </div>
        <div class="col-3">
            <p class="text-center">Expenses: </p>
        </div>
        <div class="col-3">
            <p class="text-center">Disbursment:</p> 
        </div><div class="col-3">
            <p class="text-center">Interest Rate:</p> 
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <div class="table mt-1">
            Table Area
        </div>
    </div>

    <div class="row align-items-end justify-content-center">
        <div class="col-3">
            <p>Frequency</p>
            <select class="form-select">
                <option selected value="">---- Select Option ----</option>
                <option value="monthly">Monthly</option>
                <option value="quarterly">Quarterly</option>
                <option value="yearly">Yearly</option>
            </select>
        </div>

        <div class="col-3">
            <p>Interest Calculation</p>
            <select class="form-select">
                <option selected value="">---- Select Option ----</option>
                <option value="monthly">Simple</option>
                <option value="quarterly">Compound</option>
            </select>
        </div>

        <div class="col-3">
            <label for="endDate">End Date</label>
            <input type="date" id="endDate" class="form-control"/>
        </div>

        <div class="col-3 d-flex justify-content-center">
            <a class="btn btn-primary me-1">PDF</a>
            <a class="btn btn-primary">XLS</a>
        </div>

    </div>

    <div class="row mt-4">
        <div class="col-9">
            <div class="row align-items-center">
                <div class="col-xl-2 col-lg-2 col-md-3">
                    <label for="saveLocation">Save Location</label>
                </div>
                <div class="col-xl-10 col-lg-10 col-md-9">
                    <input type="text" class="form-control" id="saveLocation"/>
                </div>
            </div>
        </div>

        <div class="col-3 px-2 py-1 d-flex justify-content-center">
            <a class="btn btn-primary">Generate Summary</a>
        </div>

    </div>

    <div class="mt-4">
        <fieldset class="border px-2 py-2">
            <legend>Admin</legend>

            <div class="row my-2">
                <div class="col-3 d-flex align-items-center">
                    <input class="form-check" type="radio" value="expenses" name="option"/>
                    <label class="ms-1">Expenses</label>
                </div>
                <div class="col-3 d-flex align-items-center">
                    <input class="form-check" type="radio" value="collections" name="option"/>
                    <label class="ms-1">Collections</label>
                </div>
                <div class="col-3 d-flex align-items-center">
                    <input class="form-check" type="radio" value="disbursement" name="option"/>
                    <label class="ms-1">Disbursement</label>
                </div>
                <div class="col-3 d-flex align-items-center">
                    <input class="form-check" type="radio" value="interest" name="option"/>
                    <label class="ms-1">Change in interest</label>
                </div>
            </div>

            <div class="row my-2">
                <div class="col-6 d-flex align-items-center">
                    <label for="date" class="me-2">Date</label>
                    <input class="form-control" type="date" id="date"/>
                </div>
                <div class="col-6 d-flex align-items-center">
                    <label for="amount" class="me-2">Amount (Rs.)</label>
                    <input class="form-control" type="number" id="amount"/>
                </div>
            </div>

            <div class="row my-2">
                <div class="col-6 d-flex align-items-center">
                    <input type="checkbox" id="check"/>
                    <label for="check" class="me-1 ms-1">Change Interest Rate</label>
                    <input type="number" class="form-control"/>
                </div>
                <div class="col-6 d-flex align-items-center">
                    <label for="note" class="me-2">Note</label>
                    <input class="form-control" type="text" id="note"/>
                </div>
            </div>

            <div class="row my-2">
                <div class="col-4 px-2 d-flex justify-content-center">
                    <a class="btn btn-danger">Remove</a>
                </div>
                <div class="col-4 px-2 d-flex justify-content-center">
                    <a class="btn btn-primary">Add</a>
                </div>
                <div class="col-4 px-2 d-flex justify-content-center">
                    <a class="btn btn-danger">Bulk upload using Excel</a>
                </div>
            </div>

        </fieldset>
    </div>
</div>