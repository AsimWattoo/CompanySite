@page "/borrowerdetails"


@using Company_Site.Base;
@using Company_Site.Data;
@using Company_Site.Pages.Components
@inherits BaseAddPage<StatementOfAccountModel>
<h2 class="ms-3">Borrower Details</h2>

<CollapsibleContainer>
    <div class="mx-2">
        <EditForm Model="NewEntry" OnValidSubmit="Save">

            <DataAnnotationsValidator/>

            <MultiErrorView Errors="_errors"/>
            <div class="row">
                <div class="col-md-4">
                    <label for="selectAcc">Select Account</label>
                    <select id="selectAcc" class="form-select">
                        <option value="1">1</option>
                    </select>
                </div>
                <div class="col-md-2"></div>
                <div class="col-md-4">
                    <label for="selectTrust">Select Trust</label>
                    <select id="selectTrust" class="form-select">
                        <option value="1">1</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label for="collection">Collection till date</label>
                    <input id="collection" class="form-control" type="text">
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-3">
                    <label for="expenses">Expenses Till Date</label>
                    <input id="expenses" class="form-control" type="text">
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-3">
                    <label for="disbursement">Disbursement</label>
                    <input id="disbursement" class="form-control" type="text">
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label for="accNum">Account Number</label>
                    <select id="accNum" class="form-select">
                        <option value="1">1</option>
                    </select>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-3">
                    <label for="freq">Frequency</label>
                    <select id="freq" class="form-select">
                        <option value="monthly">Monthly</option>
                        <option value="quarterly">Quarterly</option>
                        <option value="annually">Annually</option>
                    </select>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-3">
                    <label for="interestCalc">Interest Calculation</label>
                    <select id="interestCalc" class="form-select">
                        <option value="simple">Simple</option>
                        <option value="compound">Compound</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label for="statementAsOn">Statement As On</label>
                    <input id="statementAsOn" class="form-control" type="date">
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-3 mt-4">
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-primary rounded-0">PDF</button>
                        <button class="btn btn-primary rounded-0">XLS</button>
                    </div>
                </div>
                <div class="col-md-1"></div>
                <div class="col-md-3 mt-4">
                    <p class="text-center">
                        <button class="btn btn-primary">
                            Generate Summary
                        </button>
                    </p>
                    
                </div>
            </div>
            
            <p class="d-flex align-items-center justify-content-center mt-3 text-center">
                <a class="btn btn-danger me-2" @onclick="Clear">Clear</a>
                <input class="btn btn-primary" type="submit" value="@(ShouldAdd ? "Add" : "Save")"/>
            </p>
        </EditForm>
    </div>
</CollapsibleContainer>

<Table T="StatementOfAccountModel" T2="int" ShowSerialNumber=true Items="@Enteries" GetTableRows="@GetTableRows" Headers="@Headers" GetId="@GetId" OnDelete="DeleteRecord" OnEdit="EditRecord" OnSearch="Search" ></Table>
