@page "/"
@using Company_Site.Enum
@using Company_Site.Pages.Components

<PageTitle>Dashboard</PageTitle>

<AuthorizeView>

	<Authorized>
		
		<AccessChecker Page="UserPages.Dashboard" ReturnUrl="~/">
            <div class="card border-0">
                <div class="card-header pb-0">
                  <h5>Dashboard</h5>
                </div>
                <div class="card border-0">
                    <div class="card-body">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <p>Group</p>
                                    </div>
                                    <div class="col-md-4">
                                        <p>Designation</p>
                                    </div>
                                    <div class="col-md-4">
                                        <p>Role</p>
                                    </div>
                                </div>
                                <br>
                                <p class="mt-3">Number of cases</p>
                            </div>
                        </div>

                        <br>
                        <div class="card">
                            <div class="row card-body">
                                <div class="col-md-2">
                                    <p>POS</p>
                                </div>
                                <div class="col-md-2">
                                    <p>TOS</p>
                                </div>
                                <div class="col-md-2">
                                    <p>SR issued</p>
                                </div>
                                <div class="col-md-2">
                                    <p>SR redeemed</p>
                                </div>
                                <div class="col-md-2">
                                    <p>Management fee</p>
                                </div>
                            </div>
                        </div>

                        <br>
                        <div class="card mt-3">
                            <div class="row card-body">
                                <div class="col-md-4">
                                    <p>Total Recovery LT</p>
                                    <p>Total Recovery YT</p>
                                    <p>Budget for the year</p>
                                    <p>Asset Value</p>
                                </div>
                                <div class="col-md-4">
                                    <p>RR</p>
                                </div>
                                <div class="col-md-4">
                                    <p>To Do list</p>
                                </div>
                            </div> 
                        </div>
                        <br>
                        <div class="card border-0">
                            <div class="row card-body">
                                <div class="col-md-4 col-12 card my-md-0 my-2">
                                    <div class="row card-body">
                                        <div class="col-md-6">
                                            <p>Litigation</p>
                                            <p>Sarfasi</p>
                                            <p>Number of cases</p>
                                            <p>Notice issued</p>
                                        </div>
                                        <div class="col-md-6">
                                            <p>Possession taken</p>
                                            <p>Auction</p>
                                            <p>DRT</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4 card my-md-0 my-2">
                                    <div class="card-body">
                                        <p>IBC</p>
                                        <p>Number of cases</p>
                                        <p>Claim filed</p>
                                        <p>Liquidation</p>
                                    </div>
                                </div>
                                <div class="col-md-4 card my-md-0 my-2">
                                    <div class="row card-body">
                                        <div class="col-md-6">
                                            <p>Settlement</p>
                                            <p>Number of cases</p>
                                            <p>Resolved</p>
                                            <p>Failed</p>
                                        </div>
                                        <div class="col-md-6">
                                            <p>Restructuring</p>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
		</AccessChecker>

	</Authorized>

	<NotAuthorized>
		<LoginRedirect ReturnUrl="/"/>
	</NotAuthorized>

</AuthorizeView>

