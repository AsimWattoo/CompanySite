@page "/login"
@using Company_Site.ViewModels

<div class="container d-flex justify-content-center align-items-center">

	<div class="text-center login-shadow">

		<h3>Login</h3>

		<EditForm Model="loginModel">

			<div class="form-floating mb-3">
			  <InputText type="text" class="form-control" id="username" placeholder="Username" @bind-Value="loginModel.Username"/>
			  <label for="username">Username</label>
			</div>

			<div class="form-floating mb-3">
			  <InputText type="password" class="form-control" id="password" placeholder="Username" @bind-Value="loginModel.Username"/>
			  <label for="username">Username</label>
			</div>

			<div class="d-flex justify-content-center">
				<a class="btn btn-outline-primary">Login</a>
			</div>

		</EditForm>

	</div>

</div>



@code {

	private LoginViewModel loginModel;

}
